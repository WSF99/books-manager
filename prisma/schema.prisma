generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int      @id @default(autoincrement())
  sbn         String   @unique
  name        String
  description String?
  author      String
  inventory   Int?     @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}